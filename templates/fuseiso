
iso_prepare () {
    default_prepare

    declare -g MOUNT MOUNTTARGET

    [[ $MOUNT != /* ]] && MOUNT="$HOME/isos/spiele/$MOUNT"
    [[ -z $MOUNTTARGET ]] && MOUNTTARGET="$HOME/isos/mnt"
    exc fuseiso -p $MOUNT $MOUNTTARGET
}

iso_cleanup () {
    exc fusermount -u $MOUNTTARGET
}

EXPORT iso prepare cleanup

# vim:ft=sh
